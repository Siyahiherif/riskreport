generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ScanStatus {
  queued
  running
  done
  error
}

enum BlogStatus {
  draft
  published
  scheduled
}

model Scan {
  id            String     @id @default(uuid())
  domain        String
  emailOptIn    String?
  ipAddress     String?
  country       String?
  userAgent     String?
  status        ScanStatus
  createdAt     DateTime   @default(now())
  finishedAt    DateTime?
  resultJson    Json?
  cacheKey      String
  errorMessage  String?
  analysisVersion String

  order   Order?
  reports Report[]

  @@index([domain])
  @@index([cacheKey])
}

model Order {
  id             String   @id @default(uuid())
  lemonOrderId   String   @unique
  email          String?
  productType    String
  domain         String
  scanId         String?  @unique
  reportToken    String   @unique
  createdAt      DateTime @default(now())

  scan           Scan?    @relation(fields: [scanId], references: [id])
}

model Report {
  id          String   @id @default(uuid())
  reportToken String   @unique
  scanId      String
  storageUrl  String
  expiresAt   DateTime
  createdAt   DateTime @default(now())

  scan        Scan     @relation(fields: [scanId], references: [id])
}

model BlogPost {
  id            String      @id @default(uuid())
  title         String
  slug          String      @unique
  summary       String      @default("")
  content       String
  status        BlogStatus  @default(draft)
  publishDate   DateTime?
  category      String      @default("Passive Security")
  tags          String[]    @default([])
  seoTitle      String?
  canonicalUrl  String?
  indexable     Boolean     @default(true)
  focusKeyword  String?
  wordCount     Int         @default(0)
  readMinutes   Int         @default(1)
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  @@index([status, publishDate])
}

model ComplianceReport {
  id           String   @id @default(uuid())
  reportToken  String   @unique
  email        String
  companyName  String?
  answers      Json?
  score        Int
  riskLevel    String
  readiness    Json
  storagePath  String?
  status       String   @default("pending")
  paidAt       DateTime?
  emailSentAt  DateTime?
  paymentId    String?
  createdAt    DateTime @default(now())
  expiresAt    DateTime

  @@index([email])
  @@index([expiresAt])
  @@index([status])
}
